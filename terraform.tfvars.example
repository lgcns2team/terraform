# AWS Configuration
aws_region = "ap-northeast-2"

# Project Configuration
project_name = "history-ai"
environment  = "prod"

# Network Configuration (Single-AZ)
vpc_cidr             = "10.0.0.0/16"
availability_zone    = "ap-northeast-2a"
public_subnet_cidr   = "10.0.1.0/24"
private_subnet_cidr  = "10.0.2.0/24"

# RDS Configuration
postgres_version         = "15.15"
rds_instance_class       = "db.t3.micro"
rds_allocated_storage    = 20
postgres_db_name         = "historyai"
postgres_master_username = "postgres"
postgres_master_password = "CHANGE_ME_IN_PRODUCTION"  # ⚠️ Use Secrets Manager instead!

# ElastiCache Configuration
redis_node_type      = "cache.t3.micro"
redis_engine_version = "7.0"

# ECS Configuration
gateway_image_tag = "latest"
backend_image_tag = "latest"
django_image_tag  = "latest"

gateway_cpu    = "512"
gateway_memory = "1024"
backend_cpu    = "512"
backend_memory = "1024"
django_cpu     = "256"
django_memory  = "512"

# SSL Certificate (Optional)
# Uncomment and set your ACM certificate ARN for HTTPS
# acm_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxx"
